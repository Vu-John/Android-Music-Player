<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_player" tools:context="com.vucode.music.PlayerActivity">

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/buttonPlay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="||"
        android:id="@+id/buttonPlay"
        android:textStyle="bold"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="&lt;&lt;"
        android:id="@+id/buttonRewind"
        android:layout_alignTop="@+id/buttonPlay"
        android:layout_toLeftOf="@+id/buttonPlay"
        android:layout_toStartOf="@+id/buttonPlay"
        android:textStyle="bold" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text=">>"
        android:id="@+id/buttonFastForward"
        android:layout_alignTop="@+id/buttonPlay"
        android:layout_toRightOf="@+id/buttonPlay"
        android:layout_toEndOf="@+id/buttonPlay"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">|"
        android:id="@+id/buttonNext"
        android:layout_alignBottom="@+id/buttonFastForward"
        android:layout_toRightOf="@+id/buttonFastForward"
        android:layout_toEndOf="@+id/buttonFastForward"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|&lt;"
        android:id="@+id/buttonPrevious"
        android:layout_alignTop="@+id/buttonRewind"
        android:layout_toStartOf="@+id/buttonRewind"
        android:textStyle="bold" />
</RelativeLayout>
